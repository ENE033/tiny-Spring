<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="a" class="entity.circle.A">
        <property name="b" ref="b"/>
    </bean>
    <bean id="b" class="entity.circle.B">
        <property name="c" ref="c"/>
    </bean>
    <bean id="c" class="entity.circle.C">
        <property name="a" ref="a"/>
    </bean>
    <bean id="peerInterceptor" class="entity.aop.PeerInterceptor"/>
    <bean id="aspectJExpressionPointcutAdvisor"
          class="springframework.aop.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* entity.circle.*.*(..))"/>
        <property name="advice" ref="peerInterceptor"/>
    </bean>
    <bean id="defaultAdvisorAutoProxyCreator"
          class="springframework.aop.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>


</beans>